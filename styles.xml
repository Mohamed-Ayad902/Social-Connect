<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseLayout" parent="Theme.Instagram">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="titleTextColor">@color/black</item>
        <item name="buttonGravity">center_vertical</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--                             end of base views style                             -->

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidthFocused">@dimen/_1sdp</item>
        <item name="android:textColorHint">@color/darker_grey</item>
        <item name="boxBackgroundColor">@color/more_light_grey</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8sdp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingStart">@dimen/_45sdp</item>
        <item name="android:paddingEnd">@dimen/_45sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="fontFamily">@font/alkatra</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white_tint</item>
        <item name="android:background">@drawable/background_instagram_gredient</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="HeaderText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/acme_bold_header</item>
    </style>

    <style name="OnBoardingText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_26ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/concert</item>
    </style>

    <style name="NormalText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darker_grey</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="PostText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darker_grey</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">@dimen/_17sdp</item>
        <item name="background">@null</item>
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="SmallNormalText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darker_grey</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="Fab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:visibility">invisible</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="borderWidth">0dp</item>
        <item name="backgroundTint">@color/light_grey</item>
    </style>

    <style name="TabFont" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/concert</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="background">@color/white</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="tabTextAppearance">@style/TabFont</item>
        <item name="tabTextColor">@color/light_grey</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/background_circle_progress</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">20%</item>
    </style>

    <style name="CornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="DiamondCut">
        <item name="cornerSize">75dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="SpecificCornerCut">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="SpecificCornerRounded">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>


</resources>